swagger: '2.0'
info:
  version: "1.0.0"
  title: Solartis SavePaymentMethod API for HYLA
  description: To save the payment method
  
  
host: hylakb.uat.solartis.net
basePath: /KnowledgeEngineV6_6/KnowledgeBase
schemes:
  - https
consumes:
  - application/json
produces:
  - application/json
paths:
  /FireEventV3:
    post:
      description: Save the payment method for the given input
      operationId: savePaymentMethod
      produces:
        - application/json
      parameters:
        - name: Token
          in: header
          description: Authentication Token
          required: true
          type: string
          format: string
          default: ""
        - name: EventName
          in: header
          description: Name of the event to be invoked
          required: true
          type: string
          format: string
          default: "SavePaymentMethod_1.1.0.3"
        - name: OwnerId
          in: header
          description: Name of the event to be invoked
          required: true
          type: string
          format: string
          default: "2282"
        - name: MODE
          in: header
          description: Name of the event to be invoked
          required: true
          type: string
          format: string
          default: "LIVE"
        - name: Environment
          in: header
          description: Name of the event to be invoked
          required: true
          type: string
          format: string
          default: "15"
        - name: SavePaymentMethod
          in: body
          description: Save the payment method
          required: true
          schema:
            $ref: '#/definitions/SavePaymentMethod_Request'
      responses:
        '200':
          description: Success Response
          schema:
            $ref: '#/definitions/SavePaymentMethod_Success_Response'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/errorModel'

definitions:
  SavePaymentMethod_Request:
    type: object
    required:
      - ServiceRequestDetail
      - paymentInformation
    properties:
      ServiceRequestDetail:
        type: object
        properties:
          OwnerId:
            type: string
            default: "2282"
          ResponseType:
            type: string
            enum: ["JSON","XML"]
            default: "JSON"
          EndClientUserUniqueSessionId:
            type: string
            default: "1.0"
          UserName:
            type: string
            default: "hylaadmin"
          Token:
            type: string
            default: ""
          ServiceRequestVersion:
            type: string
            default: "1.0"
          ServiceResponseVersion:
            type: string
            default: "1.0"
          RegionCode:
            type: string
            default: "US"
          LanguageCode:
            type: string
            default: "en"
      accountId:
        type: string
        default: "1003315"
      paymentInformation:
        type: object
        properties:
          tokenId:
            type: string
            default: "dca7b40d-38d0-4f78-a00b-4032fb3b1111"

  SavePaymentMethod_Success_Response:
    type: object
    required:
      - ServiceRequestDetail
      - paymentInformation
    properties:
      accountId:
         type: string
         default: "1003315"         
      ServiceRequestDetail:
        type: object
        properties:
          ResponseType:
            type: string
            enum: ["JSON","XML"]
            default: "JSON"
          OwnerId:
            type: string
            default: "2282"
          EndClientUserUniqueSessionId:
            type: string
            default: "1.0"
          UserName:
            type: string
            default: "hylaadmin"
          Token:
            type: string
            default: ""
          ServiceRequestVersion:
            type: string
            default: "1.0"
          RegionCode:
            type: string
            default: "US"
      paymentInformation:
        type: object
        properties:
          tokenId:
            type: string
            default: "dca7b40d-38d0-4f78-a00b-4032fb3b1111"
          paymentCategory:
            type: string
            default: "CreditCard"
          lastFourDigits:
            type: string
            default: "4059"
          cardType:
            type: string
            default: "Master"
          cardExpirationYear: 
            type: string
            default: "2022"
          cardExpirationMonth: 
            type: string
            default: "05"
          customerName:
            type: string
            default: "John"
          holderZip:
            type: string
            default: "60515"
          holderAddress:
            type: string
            default: "5300 Katrine Ave, Downers Grove, IL"
               
  errorModel:
    type: object
    required:
      - RequestStatus
      - MessageDetail
    properties:
      RequestStatus:
        type: string
      MessageDetail:
        type: object
        properties:
          MessageCode:
            type: string
          MessageType:
            type: string
          UserMessage:
            type: string
          MessageLevel:
            type: string
          MessageSeverity:
            type: string
          MessageList:
            type: object
            properties:
              Message:
                type: array
                items:
                  type: string       
