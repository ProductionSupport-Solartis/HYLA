swagger: '2.0'
info:
  version: "1.0.0"
  title: Solartis Charge Monthly Payment API for HYLA
  description: To Charge Monthly Payment for Policy
  
  
host: hylakb.uat.solartis.net
basePath: /KnowledgeEngineV6_6/KnowledgeBase
schemes:
  - https
consumes:
  - application/json
produces:
  - application/json
paths:
  /FireEventV3:
    post:
      description: To Charge Monthly Payment for Policy
      operationId: ChargeMonthlyPayment
      produces:
        - application/json
      parameters:
        - name: Token
          in: header
          description: Authentication Token
          required: true
          type: string
          format: string
          default: ""
        - name: EventName
          in: header
          description: Name of the event to be invoked
          required: true
          type: string
          format: string
          default: "ChargeMonthlyPayment_1.1.0.5"
        - name: OwnerId
          in: header
          description: Owner ID of the Product
          required: true
          type: string
          format: string
          default: "2282"
        - name: MODE
          in: header
          description: MODE of the product
          required: true
          type: string
          format: string
          default: "LIVE"
        - name: Environment
          in: header
          description: Environment in which the event to be invoked
          required: true
          type: string
          format: string
          default: "15"
        - name: ChargeMonthlyPayment
          in: body
          description: To Charge Monthly Payment for Policy
          required: true
          schema:
            $ref: '#/definitions/ChargeMonthlyPayment_Request'
      responses:
        '200':
          description: Success Response
          schema:
            $ref: '#/definitions/ChargeMonthlyPayment_Success_Response'
        default:
          description: unexpected error
          schema:
            $ref: '#/definitions/errorModel'

definitions:
  ChargeMonthlyPayment_Request:
    type: object
    required:
      - ServiceRequestDetail
      - deviceInformation
    properties:
      ServiceRequestDetail:
        type: object
        properties:
          OwnerId:
            type: string
            default: "2282"
          ResponseType:
            type: string
            enum: ["JSON","XML"]
            default: "JSON"
          EndClientUserUniqueSessionId:
            type: string
            default: "1.0"
          UserName:
            type: string
            default: "hylaadmin"
          Token:
            type: string
            default: ""
          ServiceRequestVersion:
            type: string
            default: "1.0"
          ServiceResponseVersion:
            type: string
            default: "1.0"
          RegionCode:
            type: string
            default: "US"
          LanguageCode:
            type: string
            default: "en"
      accountId:
        type: string
        default: "1003312"
      deviceInformation:
        type: array
        items: 
          properties:
            deviceId:
              type: string
            installmentDueDate:
              type: string
            
              
              
  ChargeMonthlyPayment_Success_Response:
    type: object
    required:
      - ServiceRequestDetail
      - deviceInformation
    properties:
      ServiceRequestDetail:
        type: object
        properties:
          ResponseType:
            type: string
            enum: ["JSON","XML"]
            default: "JSON"
          OwnerId:
            type: string
            default: "2282"
          EndClientUserUniqueSessionId:
            type: string
            default: "1.0"
          UserName:
            type: string
            default: "hylaadmin"
          Token:
            type: string
            default: ""
          ServiceRequestVersion:
            type: string
            default: "1.0"
          ServiceResponseVersion:
            type: string
            default: "1.0"
          RegionCode:
            type: string
            default: "US"
          LanguageCode:
            type: string
            default: "en"
      accountId:
        type: string
        default: "1003312"
      ResponseStatus:
        type: string
      responseCode:
        type: string
      documents:
        type: object
        properties:
            name:
              type: string
              default: "Invoice"
            URL:
              type: string
      deviceInformation:
        type: array
        items:
          properties:
            documents:
             type: object
             properties:
               name:
                type: string
               URL:
                type: string
            deviceId:
              type: string
            installmentDevicePremium:
              type: string
            installmentDueDate:
              type: string
            
  errorModel:
    type: object
    required:
      - RequestStatus
      - MessageDetail
    properties:
      RequestStatus:
        type: string
      MessageDetail:
        type: object
        properties:
          MessageCode:
            type: string
          MessageType:
            type: string
          UserMessage:
            type: string
          MessageLevel:
            type: string
          MessageSeverity:
            type: string
          MessageList:
            type: object
            properties:
              Message:
                type: array
                items:
                  type: string       


